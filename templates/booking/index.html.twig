{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
<main role="main" class="main container-fluid p-4"> 
<div class="container min-vh-100">

{% if not isBooking %}
<div class="form-group">
	<div class="d-flex flex-row align-items-center">
	    <i class="bi bi-calendar-plus p-2" style="font-size: 2rem"></i>
	    <h2 class="p-2">Réservation</h2>
    </div>
	<div class="mt-3">
		{{ form_start(BookingFormType) }}

			{% if app.user %}
				{{ form_row(BookingFormType.firstName, {value: app.user.firstName}) }}
				{{ form_row(BookingFormType.lastName, {value: app.user.lastName}) }}
				{{ form_row(BookingFormType.mail, {value: app.user.email}) }}
				<div class="d-flex justify-content-center p-4">
					<button type="submit" class="btn btn-outline-success">Réserver</button>
				</div>
			{% else %}
				{{ form_row(BookingFormType.firstName) }}
				{{ form_row(BookingFormType.lastName) }}
				{{ form_row(BookingFormType.mail) }}
				<div class="d-flex justify-content-center p-4">
					<button type="submit" class="btn btn-outline-success">Réserver</button>
				</div>
			{% endif %}
			
		{{ form_end(BookingFormType) }}
	</div>
</div>
{% else %}
<div class="d-flex flex-column mt-5">
	<h2 class="d-flex justify-content-center mb-3 h1">Votre réservation a bien été effectuée.</h2>
	<h3 class="d-flex justify-content-center text-secondary mb-5">Merci de votre confiance !</h3>
	<a class="d-flex justify-content-center text-decoration-none mt-5" href="{{ path('home')}}">
		<button type="button" class="btn-home btn-lg btn">Retourner à l'accueil</button>
	</a>
</div>
{% endif %}
</div>
</main>
{% endblock %}
