<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>
            {% block title %}Quai Antique{% endblock %}
        </title>

        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,500i,600,600i&display=swap" rel="stylesheet"/>
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="header p-2">
            <nav class="navbar navbar-expand-md">
                <div class="container">
                    <a href="/"><img src={{ asset('media/logo.png') }} width="160px"></a>
                    <button 
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse" 
                    data-bs-target="#navbarNav" 
                    aria-controls="#navbarNav" 
                    aria-expanded="false" 
                    aria-label="Toggle navigation">
                        <i class="bi bi-list" style="font-size: 2rem; color: #FEFBE9;"></i>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/">Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/bookingDate">Réserver</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/menu">Menu</a>
                            </li>
                            {% if not app.user %}
                                <li class="nav-item">
                                    <a class="nav-link text-light" href="/register">Se connecter</a>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link text-light" href="/account">Mon compte</a>
                                </li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li class="nav-item">
                                    <a class="nav-link text-light" href={{ path('admin') }}>Page d'administration</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        {% block body %}
        {% endblock %}

        <footer class="footer container-fluid p-4">
            <div class="row text-center p-2">
                <div class="col-md-5 d-block mt-2 mb-2">
                    <h6 class="text-uppercase">contact</h6>
                    <div>
                        <img src="{{ asset('media/tel.svg') }}" width="12" class="d-inline">
                        <p  class="d-inline">00.00.00.00.00</p>
                    </div>
                    <div>
                        <img src="{{ asset('media/instagram.svg') }}" width="12" class="d-inline">
                        <p  class="d-inline">Quai_Antique</p>
                    </div>
                </div>
                <div class="col-md-2 d-block mt-2 mb-2">
                    <h6 class="text-uppercase">horaires</h6>
                    <p>
                       {{ Restaurant[0].OpeningTime}}
                    </p>
                </div>
                <div class="col-md-5 d-block mt-2 mb-2">
                    <h6 class="text-uppercase">adresse</h6>
                    <p>
                        3 rue du Restaurant<br />73 000 Chambéry<br />France.
                    </p>
                </div>
            </div>
        </footer>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
    </body>
</html>

