<!doctype html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>
            {% block title %}Quai Antique
            {% endblock %}
        </title>

        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,500i,600,600i&display=swap" rel="stylesheet"/>
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="p-2">
        <div class="header">
            <nav class="navbar navbar-expand-md fixed-top">
                <div class="container">
                    <a class="navbar-brand text-uppercase fw-bold" href="#">
                        <img src="media/logo.png" width="160px">
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Acceuil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Réserver</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Menu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Se connecter</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            </div>
        </header>

        <main role="main" class="container mt-5"> {% block body %}{% endblock %}</main>

        <footer>
            <div class="container-fluid">
                <div class="row text-center">
                    <div class="col-md d-block mt-2 mb-2">
                        <h6 class="text-uppercase">contact</h6>
                        <div>
                            <img src="media/tel.svg" width="12" class="d-inline">
                            <p  class="d-inline">00.00.00.00.00</p>
                        </div>
                        <div>
                            <img src="media/instagram.svg" width="12" class="d-inline">
                            <p  class="d-inline">Quai_Antique</p>
                        </div>
                    </div>
                    <div class="col-md d-block mt-2 mb-2">
                        <h6 class="text-uppercase">horaires</h6>
                        <p>
                            Du lundi au dimanche<br />Réservation de 11h00 à 14h00<br />et de 18h00 à 21h00
                        </p>
                    </div>
                    <div class="col-md d-block mt-2 mb-2">
                        <h6 class="text-uppercase">adresse</h6>
                        <p>
                            3 rue du Restaurant<br />73 000 Chambéry<br />France.
                        </p>
                    </div>
                </div>
            </div>
        </footer>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
    </body>
</html>

